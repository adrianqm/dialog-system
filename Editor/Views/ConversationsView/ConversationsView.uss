GridBackground {
    --grid-background-color: rgb(250, 0, 0);
    --line-color: rgb(0, 138, 255);
    --thick-line-color: rgba(193, 196, 192, 0.1);
    --spacing: 15;
}

.conversation-name-label:hover {
    border-left-color: rgb(50, 142, 188);
    border-right-color: rgb(50, 142, 188);
    border-top-color: rgb(50, 142, 188);
    border-bottom-color: rgb(50, 142, 188);
    border-left-width: 2px;
    border-right-width: 2px;
    border-top-width: 2px;
    border-bottom-width: 2px;
}

.conversation-name-label--selected {
    border-left-color: rgb(68, 192, 255);
    border-right-color: rgb(68, 192, 255);
    border-top-color: rgb(68, 192, 255);
    border-bottom-color: rgb(68, 192, 255);
    border-left-width: 2px;
    border-right-width: 2px;
    border-top-width: 2px;
    border-bottom-width: 2px;
    opacity: 1;
}

#centralContainer {
    background-color: rgb(8, 8, 8);
}

:hover > .scope > .mainContainer > #headerContainer {
    border-color: rgb(0, 138, 255);
}

.conversation-bar--button {
    padding-left: 3px;
    padding-right: 3px;
    padding-top: 3px;
    padding-bottom: 3px;
    min-height: 23px;
    min-width: 23px;
    width: 23px;
    height: 23px;
}

.bookmark-btn {
    background-color: rgb(24, 24, 29);
    flex-direction: row;
    border-top-left-radius: 5px;
    border-top-right-radius: 5px;
    border-bottom-right-radius: 5px;
    border-bottom-left-radius: 5px;
    border-top-width: 2px;
    border-right-width: 2px;
    border-bottom-width: 2px;
    border-left-width: 2px;
    min-width: 100px;
    border-left-color: rgba(0, 0, 0, 0);
    border-right-color: rgba(0, 0, 0, 0);
    border-top-color: rgba(0, 0, 0, 0);
    border-bottom-color: rgba(0, 0, 0, 0);
    margin-right: 0;
}

.bookmark-btn--selected {
    background-color: rgb(24, 24, 29);
    flex-direction: row;
    border-top-left-radius: 5px;
    border-top-right-radius: 5px;
    border-bottom-right-radius: 5px;
    border-bottom-left-radius: 5px;
    border-top-width: 2px;
    border-right-width: 2px;
    border-bottom-width: 2px;
    border-left-width: 2px;
    min-width: 100px;
    border-left-color: rgb(68, 192, 255);
    border-right-color: rgb(68, 192, 255);
    border-top-color: rgb(68, 192, 255);
    border-bottom-color: rgb(68, 192, 255);
    margin-right: 0;
}

.bookmark-label {
    margin-right: 7px;
    padding-left: 0;
    font-size: 12px;
    padding-top: 4px;
    padding-right: 0;
    padding-bottom: 4px;
    color: rgba(255, 255, 255, 0.84);
}

.bookmark-btn:hover {
    border-left-color: rgb(50, 142, 188);
    border-right-color: rgb(50, 142, 188);
    border-top-color: rgb(50, 142, 188);
    border-bottom-color: rgb(50, 142, 188);
    border-left-width: 2px;
    border-right-width: 2px;
    border-top-width: 2px;
    border-bottom-width: 2px;
    flex-direction: row;
}

.boomark-image {
    background-image: url('project://database/Assets/dialog-system/Assets/bookmark_filled.png?fileID=2800000&guid=84e64485b2dbaa0469ac8c8a55d6227f&type=3#bookmark_filled');
    padding-top: 5px;
    padding-right: 0;
    padding-bottom: 5px;
    padding-left: 0;
    margin-bottom: 6px;
    margin-top: 6px;
    -unity-background-image-tint-color: rgba(255, 255, 255, 0.86);
}
